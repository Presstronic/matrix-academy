{
  "name": "matrix-academy",
  "private": true,
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "node tools/add-headers.mjs",
      "prettier --write",
      "eslint --fix --max-warnings=0 --no-warn-ignored"
    ],
    "**/*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "backend": "turbo run dev --filter=@matrix-academy/backend",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "headers": "node tools/add-headers.mjs",
    "headers:short": "SHORT=1 node tools/add-headers.mjs",
    "docker:dev:up": "./scripts/docker-dev.sh up",
    "docker:dev:down": "./scripts/docker-dev.sh down",
    "docker:dev:logs": "./scripts/docker-dev.sh logs",
    "docker:dev:restart": "./scripts/docker-dev.sh restart",
    "docker:dev:clean": "./scripts/docker-dev.sh clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "engines": {
    "node": "^22.0.0 || ^24.0.0"
  }
}
