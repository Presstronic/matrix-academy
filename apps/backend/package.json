{
  "name": "@matrix-academy/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "explicit"
  },
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 nest start --watch -c nest-cli.json",
    "dev:docker": "NODE_NO_WARNINGS=1 TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling nest start --watch -c nest-cli.json",
    "build": "nest build -c nest-cli.json",
    "start": "node dist/main.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "headers": "node ../../tools/add-headers.mjs",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json --watch",
    "test:e2e:cov": "NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json --coverage",
    "migration:generate": "typeorm-ts-node-esm migration:generate -d src/config/typeorm-cli.config.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d src/config/typeorm-cli.config.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d src/config/typeorm-cli.config.ts",
    "gen:token": "node scripts/generate-test-token.mjs",
    "test:redis": "node scripts/test-redis.mjs"
  },
  "typeorm": {
    "datasource": "src/config/typeorm-cli.config.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@matrix-academy/shared": "workspace:^",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/uuid": "^11.0.0",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.4",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "nestjs-pino": "^4.4.1",
    "pg": "^8.16.3",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "redis": "^5.8.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.4",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@jest/globals": "^30.2.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
