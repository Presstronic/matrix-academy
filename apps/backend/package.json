{
  "name": "@matrix-academy/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "explicit"
  },
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 nest start --watch -c nest-cli.json",
    "build": "nest build -c nest-cli.json",
    "start": "node dist/main.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "headers": "node ../../tools/add-headers.mjs",
    "migration:generate": "typeorm-ts-node-esm migration:generate -d src/config/typeorm-cli.config.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d src/config/typeorm-cli.config.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d src/config/typeorm-cli.config.ts"
  },
  "typeorm": {
    "datasource": "src/config/typeorm-cli.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "nestjs-pino": "^4.4.1",
    "pg": "^8.16.3",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
