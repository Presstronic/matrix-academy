{
  "name": "matrix-academy",
  "private": true,
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "node tools/add-headers.mjs",
      "eslint --fix --max-warnings=0"
    ],
    "**/*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "backend": "turbo run dev --filter=@matrix-academy/backend",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "headers": "node tools/add-headers.mjs",
    "headers:short": "SHORT=1 node tools/add-headers.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  }
}
